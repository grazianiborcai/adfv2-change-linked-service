{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "adfgr19077195"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Check when file was modified before copy')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Get children",
						"type": "GetMetadata",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"dataset": {
								"referenceName": "AmazonS3Folder",
								"type": "DatasetReference"
							},
							"fieldList": [
								"lastModified",
								"itemName",
								"itemType",
								"childItems"
							]
						}
					},
					{
						"name": "ForEach child",
						"type": "ForEach",
						"dependsOn": [
							{
								"activity": "Get children",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"typeProperties": {
							"items": {
								"value": "@activity('Get children').output.childItems",
								"type": "Expression"
							},
							"isSequential": true,
							"activities": [
								{
									"name": "Get last modified",
									"type": "GetMetadata",
									"policy": {
										"timeout": "7.00:00:00",
										"retry": 0,
										"retryIntervalInSeconds": 30,
										"secureOutput": false,
										"secureInput": false
									},
									"typeProperties": {
										"dataset": {
											"referenceName": "AmazonS3File",
											"type": "DatasetReference",
											"parameters": {
												"fileName": {
													"value": "@{item().name}",
													"type": "Expression"
												}
											}
										},
										"fieldList": [
											"lastModified"
										]
									}
								},
								{
									"name": "If Condition1",
									"type": "IfCondition",
									"dependsOn": [
										{
											"activity": "Get last modified",
											"dependencyConditions": [
												"Succeeded"
											]
										}
									],
									"typeProperties": {
										"expression": {
											"value": "@greater(activity('Get last modified').output.lastModified,pipeline().parameters.timeStamp)",
											"type": "Expression"
										},
										"ifTrueActivities": [
											{
												"name": "Copy file",
												"type": "Copy",
												"policy": {
													"timeout": "7.00:00:00",
													"retry": 0,
													"retryIntervalInSeconds": 30,
													"secureOutput": false,
													"secureInput": false
												},
												"typeProperties": {
													"source": {
														"type": "FileSystemSource",
														"recursive": true
													},
													"sink": {
														"type": "BlobSink"
													},
													"enableStaging": false,
													"dataIntegrationUnits": 0
												},
												"inputs": [
													{
														"referenceName": "AmazonS3File",
														"type": "DatasetReference",
														"parameters": {
															"fileName": {
																"value": "@{item().name}",
																"type": "Expression"
															}
														}
													}
												],
												"outputs": [
													{
														"referenceName": "AzureBlobTarget",
														"type": "DatasetReference",
														"parameters": {
															"fileName": {
																"value": "@{item().name}",
																"type": "Expression"
															}
														}
													}
												]
											}
										]
									}
								}
							]
						}
					}
				],
				"parameters": {
					"timeStamp": {
						"type": "String",
						"defaultValue": "2018-09-26T16:39:53Z"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AmazonS3Folder')]",
				"[concat(variables('factoryId'), '/datasets/AmazonS3File')]",
				"[concat(variables('factoryId'), '/datasets/AzureBlobTarget')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AmazonS3File')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AmazonS31",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"fileName": {
						"type": "String"
					}
				},
				"type": "AmazonS3Object",
				"typeProperties": {
					"key": {
						"value": "@dataset().fileName",
						"type": "Expression"
					},
					"bucketName": "testbtgr"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/AmazonS3Folder')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AmazonS31",
					"type": "LinkedServiceReference"
				},
				"type": "AmazonS3Object",
				"typeProperties": {
					"format": {
						"type": "TextFormat",
						"columnDelimiter": ",",
						"rowDelimiter": "",
						"nullValue": "\\N",
						"treatEmptyAsNull": true,
						"skipLineCount": 0,
						"firstRowAsHeader": false
					},
					"prefix": "",
					"bucketName": "testbtgr"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlobTarget')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorage1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"fileName": {
						"type": "String"
					}
				},
				"type": "AzureBlob",
				"typeProperties": {
					"fileName": {
						"value": "@dataset().fileName",
						"type": "Expression"
					},
					"folderPath": "input"
				}
			}
		}
	]
}